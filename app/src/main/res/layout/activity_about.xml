<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/about_us_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white1"
        android:clipToPadding="false"
        android:paddingTop="@dimen/dp_25"
        tools:showIn="@layout/activity_about_us">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/spacing_medium_small">

        <TextView
                android:id="@+id/tvAppInformation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_16"
                android:drawablePadding="@dimen/dp_8"
                android:drawableTop="@mipmap/icon_wan_android_round"
                android:gravity="center"
                android:text="@string/about_awesome_wan_android"
                android:textAllCaps="false"
                android:textColor="@color/comment_text"
                android:textSize="@dimen/sp_16" />

        <TextView
                android:id="@+id/tvAbout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/about_content"/>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
